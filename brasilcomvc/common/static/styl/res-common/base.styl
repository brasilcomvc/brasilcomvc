html
	font-size font_size_main


body
	color color_text_dark
	font 300 1rem font_family_sans
	padding: 1em 0


em
	font-style: italic


strong
	font-weight: bold


a[href]
		color color_main1_default
		text-decoration none

		&:hover
			text-decoration underline


#main-content
	padding 2rem 0

	> header
		border-bottom: 1px solid color_text_light
		margin-bottom: 2rem

	h1
		font font_size_xxxl font_family_sans

	h2
		font font_size_xxl font_family_sans

	section h1
		font-size font_size_xxl

	button
	a.button
		button()

	dl dt
		font-weight 400

	figure
	form
	section
		margin-bottom: 2em

	blockquote, dl, dl dd, p, ul, ul li
		margin-bottom 1em

	h1, h2, dl dt
		margin-bottom 0.5em
