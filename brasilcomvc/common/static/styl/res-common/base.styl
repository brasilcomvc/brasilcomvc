html
	font-size font_size_main


body
	color color_text_dark
	font 300 1rem font_family_sans


section#messages
	.message
		background: color_main1_disabled
		border: 1px solid color_main1_default
		color: color_main1_dark
		margin-bottom: 1em
		padding: 1em

	.success.message
		background: color_main2_disabled
		border-color: color_main2_default
		color: color_main2_dark

	.warning.message
		background: color_main3_disabled
		border-color: color_main3_default
		color: color_main3_dark

	.error.message
		background: color_main4_disabled
		border-color: color_main4_default
		color: color_main4_dark


#main-content
	padding 2rem 0

	h1
		font font_size_xxxl font_family_sans

	h2
		font font_size_xxl font_family_sans

	section h1
		font-size font_size_xxl

	a[href]
		color color_main1_default
		text-decoration none

		&:hover
			text-decoration underline

	button
	a.button
		button()

	dl dt
		font-weight 400

	figure
	form
	section
		margin-bottom: 2em

	blockquote, dl, dl dd, p, ul, ul li
		margin-bottom 1em

	h1, dl dt
		margin-bottom 0.5em
