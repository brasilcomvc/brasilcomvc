body.projects.project-list #main-content

	li.project
		col(4)
		margin-bottom: 2em

		figure
			overflow: hidden

			img
				transition: time_animation

		.short-description
			line-height: 1.5em
			height: @line-height * 3
			margin-bottom: 1em
			overflow: hidden

		&:hover
			box-shadow: inset 0 0 0 1px color_text_light

			figure img
				transform: translateX(-50%) scale(1.1)
