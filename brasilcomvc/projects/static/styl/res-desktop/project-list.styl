body.projects.project-list

	#home-banner figure
		height: 500px

		figcaption
			max-width: 80%

	li.project
		col(4)
		margin-bottom: 2em

		figure
			overflow: hidden

			img
				transition: time_animation

		.short-description
			line-height: 1.5em
			height: @line-height * 3
			margin-bottom: 1em
			overflow: hidden

		&:hover
			box-shadow: inset 0 0 0 1px color_text_light

			figure img
				transform: scale(1.1)
