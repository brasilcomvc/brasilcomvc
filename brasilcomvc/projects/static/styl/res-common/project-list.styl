body.projects.project-list

	#home-banner figure
		color: color_text_lightest
		font-size: 1.25em
		overflow: hidden
		position: relative
		z-index: 0

		// Overlay
		&:before
			absolute: 0 0 0 0
			background: rgba(black, 0.5)
			content: ''
			z-index: 1

		img
		video
			min-height: 100%
			min-width: 100%
			z-index: 0

		figcaption
		img
		video
			absolute: 50% false false 50%
			transform: translate(-50%, -50%)

		figcaption
			z-index: 2

			h1
				font-size: 1.5em

			> div
				margin: 1em

				*
					margin-bottom: 0.5em

			#project_search
				clearfix()
				margin-bottom: 1em
