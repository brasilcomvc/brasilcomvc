body.projects.project-list

	#home-banner figure
		overflow: hidden
		position: relative

		img
			absolute: 50% false false 50%
			min-height: 100%
			min-width: 100%
			transform: translate(-50%, -50%)

		figcaption
			absolute: 50% false false 50%
			background: rgba(black, 0.5)
			color: color_text_lightest
			font-size: 1.25em
			padding: 1em
			transform: translate(-50%, -50%)

	li.project
		box-shadow: inset 0 0 0 1px color_text_lighter
		padding: 1rem

		a
			color: color_text_dark
			text-decoration: none

		figure
			font-size: 0
			margin: -1rem
			margin-bottom: 1rem

		.tags
			&, *
				margin-bottom: 0
