body.projects.project-list

	#home-banner figure
		overflow: hidden
		position: relative

		img
		video
			absolute: 50% false false 50%
			min-height: 100%
			min-width: 100%
			transform: translate(-50%, -50%)

		figcaption
			absolute: 50% false false 50%
			background: rgba(black, 0.5)
			color: color_text_lightest
			font-size: 1.25em
			transform: translate(-50%, -50%)

			h1
				font-size: 1.5em

			> div
				margin: 1em

				*
					margin-bottom: 0.5em

			#project_search
				clearfix()
				margin-bottom: 1em
