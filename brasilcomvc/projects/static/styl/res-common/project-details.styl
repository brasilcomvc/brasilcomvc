body.project-details

	h1.name
		font-weight: 700

	.owner
		clearfix()

		h1
			font-size: font_size_s
			text-transform: uppercase

		figure.user-picture
			float: left
			margin-right: 0.5rem
			size: 25px

	figure.img[data-video]
		cursor: pointer
		position: relative

		&:before
		&:after
			content: ''
			transition: time_animation

		&:before
			absolute: 0 0 0 0
			background: rgba(black, 0.25)
			box-shadow: inset 0 0 6rem rgba(black, 0.3)

		&:after
			absolute: 50% false false 50%
			background: rgba(black, 0.25) url('glyphs/play.png')
			background-size: cover
			border-radius: 100%
			box-shadow: 0 0 5px rgba(black, 0.25)
			opacity: 0.7
			size: 5rem
			transform: translate(-50%, -50%)

		&:hover
			&:before
				background: rgba(black, 0)
				box-shadow: inset 0 0 1rem rgba(black, 0.1)

			&:after
				opacity: 1
				size: 6rem

	section.apply
		a.button
			background-color: color_main2_default
			display: block
			font-size: font_size_l
			font-weight: 700

		p.applications
			text-align: center

	section.map
		margin-bottom: 2em
		margin-top: -2rem

		iframe
			height: 450px
