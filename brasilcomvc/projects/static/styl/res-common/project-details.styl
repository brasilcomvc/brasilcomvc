body.project-details #main-content

	h1.name
		font-weight: 700

	figure.img[data-video]
		cursor: pointer
		position: relative

		&:before
		&:after
			transition: time_animation

		&:before
			absolute: 0 0 0 0
			background: rgba(black, 0)
			box-shadow: inset 0 0 1rem rgba(black, 0.1)
			content: ''

		&:after
			absolute: 50% false false 50%
			color: color_text_lightest
			content: '\25b6'
			font-size: 3rem
			opacity: 0.7
			transform: translate(-50%, -50%)

		&:hover
			&:before
				background: rgba(black, 0.25)
				box-shadow: inset 0 0 6rem rgba(black, 0.3)

			&:after
				opacity: 1
				transform: translate(-50%, -50%) scale(1.2)

	section.apply a.button
		background-color: color_main2_default
		display: block
		font-size: 14pt
		font-weight: 700
