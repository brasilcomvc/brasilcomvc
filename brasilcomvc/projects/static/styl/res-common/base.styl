body.projects #main-content

	// widgets/project.html
	.project
		box-shadow: inset 0 0 0 1px color_text_lighter
		margin-bottom: 2em !important
		padding: 1rem

		a
			color: color_text_dark
			text-decoration: none

		.img
			font-size: 0
			margin: -1rem
			margin-bottom: 1rem
			overflow: hidden

			img
				float: left
				width: 100%

		.short-description
			font-size: 0.9em

		.location
			font-size: 0.8em

			&:before
				background: url('glyphs/location.png') no-repeat
				background-size: 1.5em
				content: ''
				display: inline-block
				margin-right: 0.5em
				opacity: 0.5
				size: @background-size
				vertical-align: bottom

		.tags
			&, *
				margin-bottom: 0

	.tags
		ul li
			background: color_text_darker
			color: color_text_lighter
			display: inline-block
			font-family: font_family_sans
			font-size: font_size_s !important
			padding: 0.5em

	.applications
		color: color_text_medium
		font-size: font_size_s
